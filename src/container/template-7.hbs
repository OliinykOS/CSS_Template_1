<header class='header'>
  {{> headerDark}}
</header>

{{#with hero}}
  <div class="hero">
    <h1 class="hero_title">{{title}}</h1>
    <div class="hero_text">{{description}}</div>
    {{#with button}}
    <a href={{url}} class="button hero_button">{{text}}</a>
    {{/with}}
  </div>
{{/with}}
{{#with about}}
  <div class="about">
    <h2 class="about_title">{{heading}}</h2>
    <div class="about_info">{{info}}</div>
  </div>
{{/with}}
  <div class="articles_block">
    <div class="articles_header">
      <h3 class="articles_block_title">Our Articles</h3>
      <a href='#' class="button all_articles_button">View All</a>
    </div>
    <div class="articles">
      {{#each articles}}
        {{> articleCardDark data=this}}
      {{/each}}
    </div>
  </div>
<footer class='footer'>
  {{> footerDark}}
</footer>