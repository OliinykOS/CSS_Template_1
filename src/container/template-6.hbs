<header class='header'>
  <div>
    {{> logo}}
  </div>
  <nav class='header_nav'>
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
    <div class="info">
      <h1 class="info_title">{{title}}</h1>
      <p class="info_text">{{description}}</p>
    </div>
  {{/with}}
  {{#with form}}
    <form class="form">
      <h2 class="form_title">{{title}}</h2>
      <div class="form_input_list">
        {{#each inputs}}
          <input type={{type}} placeholder={{placeholder}} class="form_input" id="form_input_{{id}}">
        {{/each}}
      </div>
      <div class="form_checkbox">
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
      </div>
      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>

{{#with updates}}
  <div class="updates">
    <h1 class="updates_tittle">{{title}}</h1>
    {{#each list}}
    <div class="media">
      <img class="media_image" src="https://picsum.photos/32/32" alt="image">
      <div class="media_body">
        <strong class="media_nickname">{{nickname}}</strong>
        <p class="media_text">{{description}}</p>
      </div>
    </div>
    {{/each}}
    <a href="#" class="updates_link">All updates</a>
  </div>
{{/with}}


{{#with expirience}}
<div class="expirience">
  <div class="expirience_head">
    <h2 class="expirience_title">{{title}}</h2>
    <span class="expirience_badge">{{badge}}</span>
  </div>
  <div class="expirience_list">
    {{#each list}}
      <div>
        <strong>{{name}}</strong>
        <p>{{details}}</p>
      </div>
    {{/each}}
  </div>
</div>
{{/with}}

<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
    <div class>
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>

